<?xml version="1.0" encoding="UTF-8"?>
<options>
    <group name="gui.blocks">
        <item name="gui.advanced" option="advanced" default="true">
            <item name="gui.parser" option="parser" default="false"/>
        </item>
        <item name="gui.operations" option="operations" default="true">
            <item name="gui.local_variables" option="localVars" default="true"/>
        </item>
        <item name="gui.devices" option="devices" default="true">
            <item name="gui.serial_communication" option="serial" default="true"/>
            <group name="gui.i2c">
                <choice name="gui.no_i2c" option="i2c_no" default="true"/>                
                <choice name="gui.i2c_master" option="i2c_master" default="false"/>                
                <choice name="gui.i2c_slave" option="i2c_slave" default="false"/>                
            </group>
        </item>
        <item name="gui.usb" option="usb" default="true">
            <item name="gui.messages" option="messages" default="true"/>
        </item>
        <item name="gui.interrupts" option="interrupts" default="true"/>
        <item name="gui.use_long" option="use_long" default="false"/>
        <item name="gui.use_double" option="use_double" default="false"/>
        <group name="gui.arrays">
            <choice name="gui.no_arrays" option="noArrays" default="false"/> 
            <choice name="gui.lin_arrays" option="linArrays" default="false"/> 
            <choice name="gui.mult_arrays" option="multArrays" default="true"/> 
        </group> 
        <!-- item name="gui.teacher" option="teacher"/-->
    </group>
    <group name="gui.misc">
        <group name="gui.colorize">
            <choice name="gui.color_default" option ="colorDefault" default="true"/>
            <choice name="gui.color_category" option ="colorCategory" default="false"/>
            <choice name="gui.color_type" option ="colorType" default="false"/>
        </group>
    </group>
</options>
